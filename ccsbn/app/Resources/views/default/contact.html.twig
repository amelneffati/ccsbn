{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block body %}
<div class="column is-8 is-offset-2">
    <div class="contact-title">Nous contacter</div>
    <form class="center-block" action="https://formspree.io/registervalidation@gmail.com" method="post">
        <div class="form-group">
        <label for="inputMail" class="sr-only">Votre adresse e-mail</label>
        <input id="inputMail" name="email" class="form-control" type="email" placeholder="Votre adresse e-mail" required />
        </div>

        <div class="form-group">
        <label for="inputMessage" class="sr-only">Votre Message</label>
        <textarea id="inputMessage" class="form-control" name="message" cols="30" rows="8" required></textarea>
        </div>

        <div class="form-group">
        <button id="button" type="submit" value="Hire me">Envoyer</button>
        </div>
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/contact-button.js') }}" />
{% endblock %}