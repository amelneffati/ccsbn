{% block body %}
<div class="sonata-blog-comment-container">
    <h3 class="sonata-comments-title">{{ 'title_comments'|trans({}, 'SonataNewsBundle') }}</h3>

    <ul class="sonata-blog-comment-list">
        {% for comment in pager.results %}
            <li class="sonata-blog-comment">
                <div class="sonata-blog-comment">
                    <span class="sonata-blog-comment-name">{{ comment.name }}</span> | {{ comment.createdAt | format_date }}
                </div>
                <div class="sonata-blog-comment-message">
                    {{ comment.message }}
                </div>
            </li>
        {% else %}
            <li>{{ 'no_comments_available'|trans({}, 'SonataNewsBundle') }}.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}